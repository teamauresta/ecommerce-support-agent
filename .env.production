# Production Environment Configuration
# Copy to .env and fill in values

# ======================
# Application
# ======================
APP_ENV=production
APP_DEBUG=false
APP_SECRET_KEY=<generate-with: openssl rand -hex 32>

# ======================
# Database
# ======================
# Format: postgresql+asyncpg://user:password@host:5432/dbname
DATABASE_URL=
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ======================
# Redis
# ======================
# Format: redis://:password@host:6379/0
REDIS_URL=

# ======================
# LLM Configuration
# ======================
OPENAI_API_KEY=sk-...
OPENAI_ORG_ID=
DEFAULT_MODEL=gpt-4o
FALLBACK_MODEL=gpt-4o-mini
MAX_TOKENS=4096
TEMPERATURE=0.3

# ======================
# Shopify Integration
# ======================
SHOPIFY_API_VERSION=2024-01

# ======================
# Gorgias Integration
# ======================
# Store-specific credentials are in the database

# ======================
# Shipping (EasyPost)
# ======================
EASYPOST_API_KEY=

# ======================
# Observability
# ======================
# LangSmith
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=ecommerce-support-prod

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ======================
# Security
# ======================
CORS_ORIGINS=https://yourstore.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_PERIOD=60

# API Keys for store authentication
# Generated per-store in admin UI

# ======================
# Email (SendGrid)
# ======================
SENDGRID_API_KEY=
ESCALATION_EMAIL=support@yourcompany.com
